@using Model;
@using Common.Entities;
@{
    ViewBag.Title = "检查任务列表";
    var pager = (PageData<CheckInfo>)ViewBag.Pager;
}

<div class="page-header">
    <h1>
        检查任务列表
    </h1>
</div><!-- /.page-header -->

<button class="btn btn-link" onclick="location.href='/PayUser/AddPayUser'">添加检查任务</button>

<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">
                                    <label>
                                        <input type="checkbox" class="ace" name="userId" />
                                        <span class="lbl"></span>
                                    </label>
                                </th>
                                <th>姓名</th>
                                <th>编号</th>
                                <th>最后更新时间</th>

                                <th>
                                    金额
                                </th>
                                <th>到期时间</th>
                                <th>备注</th>
                            </tr>
                        </thead>

                        <tbody>

                            @if (pager.ListData.Count < 1)
                            {
                                <tr><td colspan="8" style=" text-align:center"> 暂无员工数据</td></tr>
                            }
                            else
                            {
                                foreach (var item in pager.ListData)
                                {
                                <tr )>
                                    <td class="center">
                                        <label>
                                            <input type="checkbox" class="ace" name="userId" value="@item.Id" />
                                            <span class="lbl"></span>
                                        </label>
                                    </td>

                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @item.TypeName
                                    </td>
                                    <td>
                                        @item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")
                                    </td>
                                    <td>
                                        @item.Lat
                                    </td>
                                    <td>
                                        @item.Lng
                                    </td>

                                    <td>
                                        @item.LocationInfo
                                    </td>

                                    <td>
                                        @item.Status
                                    </td>
                                    <td>
                                        @item
                                    </td>
                                    <td>
                                        @item.Remark
                                    </td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div><!-- /.table-responsive -->
            </div><!-- /span -->
        </div><!-- /row -->

    </div><!-- /.col -->
</div><!-- /.row -->
