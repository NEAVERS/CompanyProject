@model IEnumerable<Model.WeightRecord>

@{
    ViewBag.Menu = "WeightRecord";
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("录入记录", "Create")
</p>
<table class="table">
    <tr>
        <th>
            车牌
        </th>
        <th>
            总重
        </th>
        <th>
            录入时间
        </th>

        <th>
            录入人
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InTime)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.InUserName)
            </td>

            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
                @Html.ActionLink("详情", "Details", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>
